##### macOS #####
# language
export LC_ALL=en_US.UTF-8

# set home and end key
bindkey "\033[H" beginning-of-line
bindkey "\033[F" end-of-line

# stop backward-kill-word on directory delimiter
WORDCHARS='*?_.[]~=&;!#$%^(){}<>'

##### tools #####
# git
alias gb='git branch'
alias gco='git checkout'
alias gcm='git commit -m'
alias gp='git push'
alias gdel='!git fetch -p && git branch -vv | grep '"'"': gone]'"'"' | awk '"'"'{print $1}'"'"' | xargs -r git branch -D'
alias gpl='git pull'
alias gst='git status'

# java
# export JAVA_HOME=`/usr/libexec/java_home -v ${version}`

# kubernetes
alias h='helm'
alias k='kubectl'
alias kns='kubectl config set-context --current --namespace'
alias knsc='kubectl config get-contexts'
alias kctx='kubectl config use-context'

autoload -Uz compinit
compinit

source <(kubectl completion zsh)
compdef __start_kubectl k

export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"
alias kctx='k ctx'

# custom tools
alias github='python3 ~/tool_github_url.py'

# fuzzyfinder
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# prompt git
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
setopt PROMPT_SUBST
PROMPT='%9c%{%F{green}%}$(parse_git_branch)%{%F{none}%} $ '

# prompt kubernetes context
source ~/zsh-kubectl-prompt/kubectl.zsh
RPROMPT='%{%F{blue}%}( $ZSH_KUBECTL_PROMPT )%{$reset_color%}'

#################### @adriaanmolendijk ####################
